@using PagedList
@using SCM.Extensions
@model SCM.ViewModels.CatalogViewModel

@{
    ViewBag.Title = "Каталог";
  var grouped = Model.SampleCategories.Split(3);
}

<h2>Каталог</h2>

@foreach (var group in grouped)
{
<div class="card-deck">
  
  @foreach (var  categoy in group)
  {
    <div class="card mb-4">
      <div class="view overlay">
        <img class="card-img-top" src="@($"/Content/Images/SampleCategoryImages/{categoy.ImageName}")" alt="Card image cap">
        <a href="#">
          <div class="mask rgba-white-slight"></div>
        </a>
      </div>
      <div class="card-body">
        <h4 class="card-title">@categoy.Title</h4>
      </div>
      <div class="card-footer">
        Образцы
      </div>
    </div>
    <!-- Card -->
  }

</div>
<!-- Card deck -->  
}


