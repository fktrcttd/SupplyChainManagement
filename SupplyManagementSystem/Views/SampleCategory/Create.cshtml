@model SCM.ViewModels.SampleCategory.CreateSampleCategoryViewModel

@{
    ViewBag.Title = "Создание категории";
    var elements = (MultiSelectList)ViewBag.ChemicalElementsMultiSelect;
}

<script type="text/javascript">
        $(document).ready(function () {

            $(".chosen-select").chosen({width:"26%"});

        });
        </script>

<h2>Создание категории</h2>

@using (Html.BeginForm("Create", "SampleCategory", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageLink, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.ImageLink, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ImageLink, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BaseChemicalElementId, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-12">
                @Html.ListBoxFor(m => m.BaseChemicalElementId, elements, new { multiple = "multiple", @class="chosen-select", placeholder="ВЫберите элементы"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-dark-light" />
            </div>
        </div>
    </div>
}
