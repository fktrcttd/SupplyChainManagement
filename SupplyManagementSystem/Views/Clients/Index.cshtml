@using Kendo.Mvc.UI
@using SCM.Models
@model IEnumerable<SCM.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h2>Клиенты ИСО</h2>

@*Грид*@


<div class="container-fluid">
    <div class="row">
        @(Html.Kendo().Grid<Client>().Resizable(c => c.Columns(true))
              .Name("grid")
              .Columns(columns =>
              {
                  columns.Bound(p => p.Name).Title("ФИО");
                  columns.Bound(p => p.Organization).Title("Организация");
                  columns.Bound(p => p.Inn).Title("ИНН");
                  columns.Bound(p => p.Check).Title("Расчетный счет");
                  columns.Bound(p => p.Phone).Title("Телефон");
                  columns.Bound(p => p.Address).Title("E-mail");
                  columns.Bound(p => p.Id).Title("Действия").ClientTemplate("<a href='" + @Url.Action("Edit", "Clients", new {id = "#=Id#"}) + "' class='btn btn-xs'>  <i class='fas fa-pen'></i></a>" + "<a href='" + @Url.Action("Delete", "Clients", new {id = "#=Id#"}) + "' class='btn btn-xs m-1'>  <i class='fas fa-trash'></i></a> ");
              })
              
              .ToolBar(tools => tools.Excel().Text("Экспортировать в Эксель"))
              .Groupable()
              .Sortable()
              .Scrollable(s => s.Enabled(true))
              .Selectable(selectable => selectable
                  .Mode(GridSelectionMode.Multiple)
                  .Type(GridSelectionType.Row))
              .ToolBar(t =>
              {
                  t.Custom().Url(Url.Action("Create")).HtmlAttributes(new {@class = "float-right"}).Text("Добавить клиента");
              })
              .Excel(excel => excel
                      .FileName("Цехи.xlsx")    
                      .Filterable(true)
                      .ProxyURL(Url.Action("ExportExcel", "Excel"))
              )
              .Pageable()
              .Filterable()
              .DataSource(dataSource => dataSource
                  .Ajax()
                  .PageSize(5)
                  //Метод должен быть в контроллере.
                  .Read(read => read.Action("ClientsRead", "Clients"))
              ))
        
    </div>
</div>
