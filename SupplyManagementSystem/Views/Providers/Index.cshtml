@model IEnumerable<SCM.Models.Provider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<input type="text" id="search"/>
<button type="button" onclick="SendQuery();">Найти</button>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeleteForbidden)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditForbidden)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPublish)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastModifed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeleteForbidden)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EditForbidden)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPublish)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastModifed)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<script>

    function SendQuery() {
        var term = $("#search").val();
        var url = `/providers/index?search=${term}`;
        window.location.href = url;
    }

</script>