@using Kendo.Mvc.UI;
@using SCM.ViewModels;
@(Html.Kendo().Grid<CreateModel>()
                    .Name("grid")
                    .Columns(columns =>
                    {
                        columns.Bound(c => c.Email)
                          .Width(240);
                        columns.Bound(c => c.Name);
                        columns.Bound(c => c.Password);
                    })
                    .HtmlAttributes(new { style = "height: 350px;" })
                    .Scrollable()
                    .Groupable()
                    .Sortable()
                    .Pageable(pageable => pageable
                        .Refresh(true)
                        .PageSizes(true)
                        .ButtonCount(5))
                    .DataSource(dataSource => dataSource
                        .Ajax()
                        .Read(read => read.Action("UsersRead", "Test"))
                        .PageSize(20)
                    )
)